{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "newLine": "lf",
		"outDir": "./ts-dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
		"allowJs": true
  },
  "include": [
    "src/**/*",
    "webpack.config.js",
    ".eslintrc.cjs",
    "script/*.js"
	]
}