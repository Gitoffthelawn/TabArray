{
	"manifest_version": 2,
	"name": "Container Tab Groups",
	"version": "1.0",
	"browser_specific_settings": {
  	"gecko": {
			"id": "tab-array@menhera.org"
		}
	},
	"author": "Menhera.org",
	"homepage_url": "https://github.com/menhera-org/TabArray",
	"description": "Chrome-like tab groups using private and isolated containers: The ultimate tab manager and groups for Firefox.",
	"permissions": [
		"tabs",
		"tabHide",
		"<all_urls>",
		"cookies",
		"contextualIdentities"
	],
	"incognito": "not_allowed",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "img/more_vert_black_24dp.svg"
		},
		"default_title": "Tabs",
		"default_popup": "popup/popup.html",
		"default_area": "tabstrip",
		"theme_icons": [
			{
				"size": 16,
				"light": "img/more_vert_white_24dp.svg",
				"dark": "img/more_vert_black_24dp.svg"
			}
		]
	},
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	}
}
